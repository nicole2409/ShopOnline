<% @product.each_slice(3) do |slice|%>
  <div class="row">
    <% slice.each do |product|%>
      <div class="col-md-4">
        <div class="thumbnail">

          <%=link_to product_path(product) do %>
          <%= image_tag Faker::Placeholdit.image("640x480", 'jpg')%>
          <%end%>


          <div class="caption">
            <h3><%=link_to  product.name , product_category_path(product,product) %></h3>
            <p><%= product.description %></p>
            <p><%= product.price %></p>
          </div>
          <%= link_to "#", class:"btn btn-primary" do %>
          <span class="fa fa-shopping-cart"> Add to shopping cart</span>

          <%end%>
          </div>
      </div>
   <%end%>
 </div>
<%end%>
